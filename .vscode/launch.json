{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "MicroPython (Emulator)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.extension/emulator/mock/runner.py",
      "args": ["${file}"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "MICROPYTHON_MOCK": "1",
        "MOCK_BOARD": "raspberry-pi-pico"
      }
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}
