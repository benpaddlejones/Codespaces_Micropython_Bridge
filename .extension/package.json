{
  "name": "pico-bridge",
  "displayName": "Pi Pico to Codespaces Bridge",
  "description": "Bridge between GitHub Codespaces and Raspberry Pi Pico/ESP32 for MicroPython development via Web Serial API",
  "version": "1.1.0",
  "publisher": "benpaddlejones",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/benpaddlejones/Codespaces_Micropython_Bridge"
  },
  "bugs": {
    "url": "https://github.com/benpaddlejones/Codespaces_Micropython_Bridge/issues"
  },
  "homepage": "https://github.com/benpaddlejones/Codespaces_Micropython_Bridge#readme",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#e30b5d",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "micropython",
    "raspberry pi pico",
    "pico",
    "esp32",
    "codespaces",
    "serial",
    "embedded",
    "microcontroller",
    "web serial"
  ],
  "activationEvents": [
    "workspaceContains:**/main.py",
    "onCommand:picoBridge.openEmulator",
    "onCommand:picoBridge.runActiveFileInEmulator",
    "onCommand:picoBridge.viewPinout"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "picoBridge.startServer",
        "title": "Start Server",
        "category": "Pico Bridge",
        "icon": "$(play)"
      },
      {
        "command": "picoBridge.stopServer",
        "title": "Stop Server",
        "category": "Pico Bridge",
        "icon": "$(debug-stop)"
      },
      {
        "command": "picoBridge.openBrowser",
        "title": "Open in Browser",
        "category": "Pico Bridge",
        "icon": "$(globe)"
      },
      {
        "command": "picoBridge.runFile",
        "title": "Run Current File on Pico",
        "category": "Pico Bridge",
        "icon": "$(play)"
      },
      {
        "command": "picoBridge.uploadFile",
        "title": "Upload File to Pico",
        "category": "Pico Bridge",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "picoBridge.uploadProject",
        "title": "Upload Project to Pico",
        "category": "Pico Bridge",
        "icon": "$(package)"
      },
      {
        "command": "picoBridge.listFiles",
        "title": "List Files on Pico",
        "category": "Pico Bridge",
        "icon": "$(list-tree)"
      },
      {
        "command": "picoBridge.openREPL",
        "title": "Open REPL",
        "category": "Pico Bridge",
        "icon": "$(terminal)"
      },
      {
        "command": "picoBridge.showLogs",
        "title": "Show Logs",
        "category": "Pico Bridge",
        "icon": "$(output)"
      },
      {
        "command": "picoBridge.softReset",
        "title": "Soft Reset (Ctrl+D)",
        "category": "Pico Bridge",
        "icon": "$(refresh)"
      },
      {
        "command": "picoBridge.hardReset",
        "title": "Hard Reset",
        "category": "Pico Bridge",
        "icon": "$(debug-restart)"
      },
      {
        "command": "picoBridge.stopCode",
        "title": "Stop Running Code (Ctrl+C)",
        "category": "Pico Bridge",
        "icon": "$(debug-stop)"
      },
      {
        "command": "picoBridge.refreshFiles",
        "title": "Refresh Device Files",
        "category": "Pico Bridge",
        "icon": "$(refresh)"
      },
      {
        "command": "picoBridge.createProject",
        "title": "Create MicroPython Project",
        "category": "Pico Bridge",
        "icon": "$(new-folder)"
      },
      {
        "command": "picoBridge.setupExistingProject",
        "title": "Setup Existing Project",
        "category": "Pico Bridge",
        "icon": "$(folder)"
      },
      {
        "command": "picoBridge.openEmulator",
        "title": "Open MicroPython Emulator",
        "category": "Pico Bridge",
        "icon": "$(circuit-board)"
      },
      {
        "command": "picoBridge.runActiveFileInEmulator",
        "title": "Run Active File in Emulator",
        "category": "Pico Bridge",
        "icon": "$(debug-start)"
      },
      {
        "command": "picoBridge.viewPinout",
        "title": "View Board Pinout",
        "category": "Pico Bridge",
        "icon": "$(circuit-board)"
      },
      {
        "command": "picoBridge.debugPythonFile",
        "title": "Debug Python File",
        "category": "Pico Bridge",
        "icon": "$(bug)"
      },
      {
        "command": "picoBridge.getMockRunnerPath",
        "title": "Pico Bridge: Get Emulator Runner Path",
        "category": "Pico Bridge"
      },
      {
        "command": "picoBridge.getMockPath",
        "title": "Pico Bridge: Get Emulator Path",
        "category": "Pico Bridge"
      },
      {
        "command": "picoBridge.getSelectedBoard",
        "title": "Pico Bridge: Get Selected Emulator Board",
        "category": "Pico Bridge"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "picoBridge.startServer",
          "when": "!picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.stopServer",
          "when": "picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.openBrowser",
          "when": "picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.runFile",
          "when": "editorLangId == python && picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.uploadFile",
          "when": "editorLangId == python && picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.uploadProject",
          "when": "picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.listFiles",
          "when": "picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.openREPL",
          "when": "picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.softReset",
          "when": "picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.hardReset",
          "when": "picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.stopCode",
          "when": "picoBridge.serverRunning"
        },
        {
          "command": "picoBridge.openEmulator"
        },
        {
          "command": "picoBridge.runActiveFileInEmulator",
          "when": "editorLangId == python"
        },
        {
          "command": "picoBridge.getMockRunnerPath",
          "when": "false"
        },
        {
          "command": "picoBridge.getMockPath",
          "when": "false"
        },
        {
          "command": "picoBridge.getSelectedBoard",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "picoBridge.runFile",
          "when": "editorLangId == python && picoBridge.serverRunning",
          "group": "picoBridge@1"
        },
        {
          "command": "picoBridge.uploadFile",
          "when": "editorLangId == python && picoBridge.serverRunning",
          "group": "picoBridge@2"
        }
      ],
      "explorer/context": [
        {
          "command": "picoBridge.runFile",
          "when": "resourceExtname == .py && picoBridge.serverRunning",
          "group": "picoBridge@1"
        },
        {
          "command": "picoBridge.uploadFile",
          "when": "resourceExtname == .py && picoBridge.serverRunning",
          "group": "picoBridge@2"
        },
        {
          "command": "picoBridge.runActiveFileInEmulator",
          "when": "resourceExtname == .py",
          "group": "picoBridge@3"
        }
      ],
      "view/item/context": [
        {
          "command": "picoBridge.runActiveFileInEmulator",
          "when": "view == picoBridge.workspaceFiles && viewItem == pythonFile",
          "group": "inline@1"
        },
        {
          "command": "picoBridge.debugPythonFile",
          "when": "view == picoBridge.workspaceFiles && viewItem == pythonFile",
          "group": "inline@2"
        },
        {
          "command": "picoBridge.runFile",
          "when": "view == picoBridge.workspaceFiles && viewItem == pythonFile && picoBridge.serverRunning",
          "group": "inline@3"
        },
        {
          "command": "picoBridge.uploadFile",
          "when": "view == picoBridge.workspaceFiles && viewItem == pythonFile && picoBridge.serverRunning",
          "group": "1_file"
        }
      ],
      "view/title": [
        {
          "command": "picoBridge.refreshFiles",
          "when": "view == picoBridge.deviceExplorer",
          "group": "navigation"
        },
        {
          "command": "picoBridge.openBrowser",
          "when": "view == picoBridge.status && picoBridge.serverRunning",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "picoBridge",
          "title": "Pico Bridge",
          "icon": "media/icons/pico-activity.png"
        }
      ]
    },
    "views": {
      "picoBridge": [
        {
          "id": "picoBridge.status",
          "name": "Connection Status",
          "contextualTitle": "Pico Bridge Status"
        },
        {
          "id": "picoBridge.deviceExplorer",
          "name": "Device Files",
          "contextualTitle": "Pico Device Explorer"
        },
        {
          "id": "picoBridge.workspaceFiles",
          "name": "Project Files",
          "contextualTitle": "MicroPython Project"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "picoBridge.status",
        "contents": "Pico Bridge server is not running.\n\n[$(play) Start Bridge Server](command:picoBridge.startServer)\n\nAfter starting, a browser will open where you can connect your Pico device using the Web Serial API.\n\n**Note:** Use Chrome or Edge browser for Web Serial support.\n\n---\n\n[$(circuit-board) Open Emulator](command:picoBridge.openEmulator)\n\nTest MicroPython code without hardware.",
        "when": "!picoBridge.serverRunning"
      },
      {
        "view": "picoBridge.status",
        "contents": "Bridge server is running on port $(picoBridge.port).\n\n[$(globe) Open in Browser](command:picoBridge.openBrowser)\n\n[$(debug-stop) Stop Server](command:picoBridge.stopServer)\n\n---\n\n[$(circuit-board) Open Emulator](command:picoBridge.openEmulator)\n\nTest MicroPython code without hardware.",
        "when": "picoBridge.serverRunning"
      },
      {
        "view": "picoBridge.deviceExplorer",
        "contents": "No device connected.\n\nStart the bridge server and connect your Pico in the browser.\n\n[$(play) Start Server](command:picoBridge.startServer)",
        "when": "!picoBridge.serverRunning"
      },
      {
        "view": "picoBridge.deviceExplorer",
        "contents": "Connect to your Pico device in the browser to view files.\n\n[$(globe) Open Browser](command:picoBridge.openBrowser)",
        "when": "picoBridge.serverRunning && !picoBridge.deviceConnected"
      },
      {
        "view": "picoBridge.workspaceFiles",
        "contents": "No MicroPython project detected.\n\n[$(new-folder) Create MicroPython Project](command:picoBridge.createProject)\n\nCopies the full project template (main.py, config.py, lib/) to your workspace root.\n\n[$(folder) Setup Existing Project](command:picoBridge.setupExistingProject)\n\nMark an existing folder as a MicroPython project.",
        "when": "!picoBridge.projectDetected"
      },
      {
        "view": "picoBridge.workspaceFiles",
        "contents": "No Python files found in project.\n\nCreate a main.py file to get started with MicroPython development.",
        "when": "picoBridge.projectDetected"
      }
    ],
    "configuration": {
      "title": "Pico Bridge",
      "properties": {
        "picoBridge.server.port": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port number for the bridge server",
          "scope": "window"
        },
        "picoBridge.server.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the bridge server when a MicroPython project is detected",
          "scope": "window"
        },
        "picoBridge.server.openBrowserOnStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the bridge interface in a browser when the server starts",
          "scope": "window"
        },
        "picoBridge.serial.baudRate": {
          "type": "number",
          "default": 115200,
          "enum": [
            9600,
            19200,
            38400,
            57600,
            74880,
            115200,
            230400,
            460800,
            921600
          ],
          "description": "Default baud rate for serial communication",
          "scope": "window"
        },
        "picoBridge.pty.linkPath": {
          "type": "string",
          "default": "/tmp/picoUSB",
          "description": "Path for the virtual serial port symlink",
          "scope": "window"
        },
        "picoBridge.ui.showTimestamps": {
          "type": "boolean",
          "default": false,
          "description": "Show timestamps in serial output",
          "scope": "window"
        },
        "picoBridge.project.excludeFolders": {
          "type": "array",
          "default": [
            "examples",
            ".git",
            "__pycache__",
            "node_modules"
          ],
          "items": {
            "type": "string"
          },
          "description": "Folders to exclude when uploading project",
          "scope": "resource"
        },
        "picoBridge.browser.customCommand": {
          "type": "string",
          "default": "",
          "description": "Custom browser command (leave empty for system default). Example: 'google-chrome --incognito'",
          "scope": "window"
        },
        "picoBridge.emulator.pythonExecutable": {
          "type": "string",
          "default": "python3",
          "description": "Python executable used to run the emulator runner (fall back to system python3 if empty)",
          "scope": "window"
        }
      }
    },
    "keybindings": [
      {
        "command": "picoBridge.runFile",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == python && picoBridge.serverRunning"
      },
      {
        "command": "picoBridge.uploadFile",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u",
        "when": "editorLangId == python && picoBridge.serverRunning"
      },
      {
        "command": "picoBridge.stopCode",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "picoBridge.serverRunning"
      }
    ],
    "walkthroughs": [
      {
        "id": "picoBridge.gettingStarted",
        "title": "Getting Started with Pico Bridge",
        "description": "Learn how to connect your Raspberry Pi Pico to GitHub Codespaces",
        "steps": [
          {
            "id": "picoBridge.start",
            "title": "Start the Bridge Server",
            "description": "Click the button below to start the Pico Bridge server. This creates a bridge between your Codespace and local browser.\n\n[Start Server](command:picoBridge.startServer)",
            "media": {
              "markdown": "media/walkthrough/start-server.md"
            },
            "completionEvents": [
              "onCommand:picoBridge.startServer"
            ]
          },
          {
            "id": "picoBridge.connect",
            "title": "Connect Your Pico",
            "description": "The bridge will open in your browser. Click 'Connect Pico' and select your device from the list.\n\n**Important**: Use Chrome or Edge browser for Web Serial API support.\n\n[Open Browser](command:picoBridge.openBrowser)",
            "media": {
              "markdown": "media/walkthrough/connect-pico.md"
            }
          },
          {
            "id": "picoBridge.runCode",
            "title": "Run Your First Script",
            "description": "Open a Python file and run it on your Pico! Use the command palette or right-click menu.\n\n[Run Current File](command:picoBridge.runFile)",
            "media": {
              "markdown": "media/walkthrough/run-code.md"
            },
            "completionEvents": [
              "onCommand:picoBridge.runFile"
            ]
          },
          {
            "id": "picoBridge.upload",
            "title": "Upload Your Project",
            "description": "Upload files to your Pico's filesystem for persistent storage.\n\n[Upload Project](command:picoBridge.uploadProject)",
            "media": {
              "markdown": "media/walkthrough/upload-project.md"
            },
            "completionEvents": [
              "onCommand:picoBridge.uploadProject"
            ]
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test-compile": "tsc -p ./ --outDir out"
  },
  "dependencies": {
    "express": "^4.18.2",
    "serialport": "^12.0.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
